{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@@client": ["src/client"],
            "@@components/*": ["src/client/components/*"],
            "@@assets/*": ["src/client/assets/*"],
            "@@theme": ["src/client/theme"],
            "@@client-config/*": ["src/client/config/*"],
            "@@client-data/*": ["src/client/data/*"],
            "@@context/*": ["src/client/context/*"],
            "@@hooks/*": ["src/client/hooks/*"],
            "@@reducers/*": ["src/client/reducers/*"],
            "@@actions/*": ["src/client/actions/*"],
            "@@images/*": ["public/images/*"],
            "@@server": ["src/server"],
            "@@models/*": ["src/server/models/*"],
            "@@services/*": ["src/server/services/*"],
            "@@controllers/*": ["src/server/controllers/*"],
            "@@middleware/*": ["src/server/middleware/*"],
            "@@database/*": ["src/server/database/*"],
            "@@server-config/*": ["src/server/config/*"],
            "@@lib/*": ["src/lib/*"],
            "@@styles/*": ["src/styles/*"],
            "@@types/*": ["src/types/*"],
            "@@prisma/*": ["src/server/database/prisma/*"]
        },
        "target": "ES6",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "preserveSymlinks": true,
        "typeRoots": ["node_modules/@types", "./src/types/*"],
        "sourceMap": true,
        "outDir": "dist",
        "composite": true,
        "declarationMap": true
    },
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "public/scripts/*.js"],
    "exclude": ["node_modules", ".history", "git_ignore"]
}
